{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "app.tsx",
    "ExampleData.ts",
    "custom.d.ts",
    "./src/*",
    "./src/**/**/*"
  ]
}